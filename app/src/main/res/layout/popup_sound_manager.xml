<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- LABEL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundManagerLabel"
            android:layout_margin="@dimen/tabsTVMargin"/>

        <!-- HELP -->
        <ImageView
            android:layout_width="@dimen/infoBtnSize"
            android:layout_height="@dimen/infoBtnSize"
            android:layout_marginTop="@dimen/infoBtnDefaultMargin"
            android:layout_marginEnd="@dimen/infoBtnDefaultMargin"
            android:src="@drawable/anim_icon_info_btn"
            android:id="@+id/soundManagerInfoBtn"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <!-- RADIO -->
    <RadioGroup
        android:id="@+id/smRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radioOscButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oscLabel"/>
        <RadioButton
            android:id="@+id/radioSampleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sampleLabel"/>
    </RadioGroup>

    <!-- SOUND AREA -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundManagerSoundView"/>
</LinearLayout>