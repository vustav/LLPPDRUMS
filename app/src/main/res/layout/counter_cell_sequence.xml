<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/counterCellBorder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/counterCellBg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counterCellTv"
            android:textSize="@dimen/tabsTextSize"
            android:layout_margin="@dimen/tabsTVMargin"/>

        <!-- this isn't used in the sequenceUI-counter and we should separate them -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/drawable_triangle_red"
            android:id="@+id/counterCellIv"
            android:layout_marginStart="@dimen/marginSmall"
            android:visibility="invisible"/>
    </RelativeLayout>
</FrameLayout>